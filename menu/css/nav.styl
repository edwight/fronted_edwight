html, body
	padding 0
	margin 0
	height 100%
	width 100%
	position absolute
.header
	position fixed
	z-index 100
	width:100%
	height 3.3em
	background-color #ccc
.nav
	display none
	position fixed
	overflow-y auto
	width 100%
	height 100%
	background-color orange
	margin 0 auto
	z-index 99
	top 3.3em
	//padding 0 5%
	.info
		margin 5px
		padding 10px

	.nav-list, .nav-menu
		display block
		float left
		width 100%
		font-size 1.8em
		padding 0
		margin 0
		li 
			list-style none
			width 100%
			height 50px
			padding 0
			line-height 1
			text-align left
			font-weight 400
			font-style normal
			//background-color blue
			//margin 5px
			padding 0 30px
			//padding 10px 30px
			padding-top 15px 
			a 
				text-decoration none
		li:hover
			background-color red
	.nav-menu
		background-color #3c4656
	.acerca
		width 95%
		min-height 50px
		display block
		clear both
		padding 30px 20px
		margin 0 auto
.section
	position relative
	display block
	width 100%
	margin-top 90px
	z-index 1
@media  screen and (min-width: 737px) {
	.header {
		background-color #99FF99
  	}
  	.nav .info
  	{
  		width 65%
  		display block
  		float left
  	}
  	.nav .nav-list{
  		width 65%
  		float left
  		padding-right 50px
  		margin-left 30px
  	}
	.nav .nav-list li{
		text-align center
		display inline-block
		background-color #ccc
		max-width 160px
		margin 5px
  	}
  	.nav .nav-menu
  	{
	  	width 29%
	  	position absolute
	  	top 0
	  	right 0
	  	z-index 99
 	}
 	.nav .acerca
  	{
	  	width 65%
	  	float left
 	}
}